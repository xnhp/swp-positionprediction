<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.software.uni.positionprediction.activities.OSM">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/navigation_bar"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@id/map_download_button"/>

            <Button
                android:id="@+id/map_download_button"
                android:layout_width="@dimen/cesium_settings_button_width_hight"
                android:layout_height="@dimen/cesium_settings_button_width_hight"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/map_button_download_text" />

        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
