<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- any positioning is done in the containing activity in which
         this fragment is included -->

    <!-- giving the linear layout a fixed height and introducing `Space`s
         with layout_weight of 1 distributes the FABs evenly across the
         LinearLayouts total height -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_switchMode"
            android:layout_width="@dimen/floatingbuttons_butto_size"
            android:layout_height="@dimen/floatingbuttons_butto_size"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="@dimen/floatingbuttons_margin_end"
            android:layout_marginTop="@dimen/floatingbuttons_margin_bottom"
            android:layout_marginBottom="@dimen/floatingbuttons_margin_bottom"
            app:backgroundTint="@color/button_background_tint"
            app:elevation="5dp"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/home"
            tools:layout_editor_absoluteY="238dp" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_showData"
            android:layout_width="@dimen/floatingbuttons_butto_size"
            android:layout_height="@dimen/floatingbuttons_butto_size"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="@dimen/floatingbuttons_margin_end"
            android:layout_marginBottom="@dimen/floatingbuttons_margin_bottom"
            app:backgroundTint="@color/button_background_tint"
            app:elevation="5dp"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/magnify"
            tools:layout_editor_absoluteY="238dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_showPred"
            android:layout_width="@dimen/floatingbuttons_butto_size"
            android:layout_height="@dimen/floatingbuttons_butto_size"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="@dimen/floatingbuttons_margin_end"
            android:layout_marginBottom="@dimen/floatingbuttons_margin_bottom"
            app:backgroundTint="@color/button_background_tint"
            app:elevation="5dp"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/target"
            tools:layout_editor_absoluteY="327dp" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_showLoc"
            android:layout_width="@dimen/floatingbuttons_butto_size"
            android:layout_height="@dimen/floatingbuttons_butto_size"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="@dimen/floatingbuttons_margin_end"
            android:layout_marginBottom="@dimen/floatingbuttons_margin_bottom"
            app:backgroundTint="@color/button_background_tint"
            app:elevation="5dp"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/colorAccent"
            app:srcCompat="@drawable/location"
            tools:layout_editor_absoluteY="327dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_refresh"
            android:layout_width="@dimen/floatingbuttons_butto_size"
            android:layout_height="@dimen/floatingbuttons_butto_size"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/floatingbuttons_margin_bottom"
            android:layout_marginEnd="@dimen/floatingbuttons_margin_end"
            app:backgroundTint="@color/button_background_tint"
            app:elevation="5dp"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/colorAccent"
            app:srcCompat="@drawable/again"
            tools:layout_editor_absoluteY="327dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_download"
            android:layout_width="@dimen/floatingbuttons_butto_size"
            android:layout_height="@dimen/floatingbuttons_butto_size"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/floatingbuttons_margin_bottom"
            android:layout_marginEnd="@dimen/floatingbuttons_margin_end"
            app:backgroundTint="@color/button_background_tint"
            app:elevation="5dp"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/colorAccent"
            app:srcCompat="@drawable/download"
            tools:layout_editor_absoluteY="327dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>