<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.software.uni.positionprediction.activities.BirdSelect">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <EditText
                android:id="@+id/birdselect_edittext_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/birdselect_edittext_search_margin" />

            <ScrollView
                android:id="@+id/birdselect_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/birdselect_button_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings" />

            <Button
                android:id="@+id/birdselect_button_openmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Map" />
        </LinearLayout>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
