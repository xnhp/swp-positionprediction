<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.software.uni.positionprediction.activities.BirdSelect">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/birdselect_edittext_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/birdselect_edittext_search_margin"
            android:layout_alignParentTop="true"/>

        <ScrollView
            android:id="@+id/birdselect_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/birdselect_edittext_search"
            android:layout_above="@+id/birdselect_button_select">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/birdselect_listentry_margin"
                    android:textSize="@dimen/birdselect_listentry_textsize"
                    android:text="Vogel 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/birdselect_listentry_margin"
                    android:textSize="@dimen/birdselect_listentry_textsize"
                    android:text="Vogel 2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/birdselect_listentry_margin"
                    android:textSize="@dimen/birdselect_listentry_textsize"
                    android:text="Vogel 3" />

            </LinearLayout>



        </ScrollView>

        <Button
            android:id="@+id/birdselect_button_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Button" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
